.flash-box
.wrapper
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name aaa
      %ul.side-header__box__menu
        %li.side-header__box__menu__new-group
        = link_to "#" do
          %i.fa.fa-edit
        %li.side-header__box__menu__edit-user
        = link_to "#" do
          %i.fa.fa-cog
    .groups
  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group
          aaaa
        %ul.main-header__left-box__member-list
          Memberï¼š
        %li.main-header__left-box__member-list__member aaa
      = link_to "#" do
        .main-header__edit-btn Edit
    .messages
    .form
      %form#new_message.new_message
        .input-box
          %input#message_content.input-box__text
          %label.input-box__image
            %i.fa.fa-image
            %input#message_image.input-box__image__file
        %input.submit-btn{type: "submit", value: "Send"}